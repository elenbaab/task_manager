<html lang="en">
    <%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/nav.ejs') %>

    <div class = "create task content">
        <figure class="matrix_">
            <img src="/eisenhower_matrix.jpg" alt="matrix" style="width:400px;height:400px;">
        </figure>

        <form action="/tasks" method="POST">
            <div class="form1">
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" placeholder="Title" required>
            </div>
            <div class="form2">
                <label for="matrix">Priority:</label>
                <input type="text" name="matrix" id="matrix" placeholder="Priority" required>
            </div>
            <div class="form3">
                <label for="body"></label>
                <textarea required name="body" id="body" placeholder="Description"></textarea>
            </div>
            <button class="button1">Submit</button>
        </form>
        
    </div>


    <%- include('../partials/footer.ejs') %>
    
    
</body>
</html>